    </div>
</div>
<div class="add_adress">
    <div class="add_adr_box">
        <div class="add_adr_cont clearfix">
            <form class="layui-form">
                <div class="layui-form-item">
                    <label class="layui-form-label"><span>*</span>收货人姓名：</label>
                    <div class="layui-input-block">
                        <input type="text" name="username" lay-verify="username" placeholder="" autocomplete="" lay-verType="tips" required>
                    </div>
                </div>

                <div class="layui-inline">
                    <label class="layui-form-label"><span>*</span>所在地区：</label>
                    <div class="layui-input-block">
                        <select name="area" lay-verify="area" lay-verType="tips" required>
                            <option value="">-请选择-</option>
                            <option value="陕西">陕西</option>
                            <option value="宝鸡">宝鸡</option>
                        </select>
                    </div>
                </div>

                <div class="layui-form-item">
                    <label class="layui-form-label"><span>*</span>详细地址：</label>
                    <div class="layui-input-block">
                        <input type="text" name="address" lay-verify="address"  lay-verType="tips" autocomplete="" class="layui-input" required>
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label"><span>*</span>手机号码：</label>
                    <div class="layui-input-block">
                        <input type="tel" name="phone" lay-verify="phone" lay-verType="tips" autocomplete="" class="layui-input" required>
                    </div>
                </div>
                <div class="save_order_info">
                    <input type="submit" lay-submit lay-filter="*" value="保存收获地址"  />
                </div>
            </form>
        </div>
    </div>
</div>

<div style="height: 40px"></div>
<script type="text/javascript" src="javascripts/jquery-2.2.0/jquery-2.2.0.min.js"></script>
<script type="text/javascript" src="javascripts/layui/layui.all.js"></script>
<script type="text/javascript" src="javascripts/view/order/order.js"></script>
<script>
    layui.use('form', function(){
        var form = layui.form;
        //自定义验证规则
        form.verify({
            username: function(value){
                if(value == ''){
                    return '请填写收货人姓名';
                }
            },
            area: function(value){
                if(value == ''){
                    return '请选择所在地区';
                }
            },
            address: function(value){
                if(value == ''){
                    return '请输入详细地址';
                }
            },
            phone: [/^1[3|4|5|7|8]\d{9}$/, '手机必须11位，只能是数字！']
        });
        //监听提交
        form.on('submit(*)', function(data){
            console.log(data);
            alert('提交了');
            return false;
        });

    });
</script>
